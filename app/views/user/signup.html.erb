<% if flash[:notice] %>
<div style="font-family:'Trebuchet MS'; color:#FF0000; font-size:14px;">
<%= flash[:notice] %>
</div>
<% end %>

<!--creates form, exectues the authenticate method when the submit button is clicked-->
<%= form_tag :action=>'authenticate_new_user' %>
<br>First Name:
<%= text_field("userform", "firstname",:size=>"20" )%>
<br>Email:
<%= text_field("userform", "email",:size=>"20" )%>
<br>Password:
<%= password_field("userform", "password",:size=>"20" )%>
<br>Date of Birth:
<%= date_select("userform", "dob",:size=>"20", :end_year=>Date.today.year-75, :start_year=>Date.today.year-15)%>
<br>Height cm:
<%= text_field("userform", "height_cm",:size=>"3" )%>
<br>Weight lb:
<%= text_field("userform", "weight_lb",:size=>"3" )%>
<br>Gender:
<%= select( "userform", "sex", { "Male" => "1", "Female" => "2"}) %>
<br>Opt in:
<%= check_box( "userform", "opt_in")%>

<br><input type="submit" value=" Sign up " />